<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mohamed.barki.tex">
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission 
		android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <permission
        android:name="com.mohamed.barki.tex.MYPERMISSION"
        android:protectionLevel="signature"  />
    <uses-permission android:name="com.mohamed.barki.tex.MYPERMISSION"/>

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/icon"
        android:roundIcon="@mipmap/roundicon"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:manageSpaceActivity="com.mohamed.barki.tex.ManageSpaceActivity"
        android:restoreAnyVersion="true"
        android:largeHeap="true"
        android:supportsRtl="false"
        android:allowAudioPlaybackCapture="true"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        tools:ignore="UnusedAttribute">

        <activity android:name=".LoginActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:exported="true">

            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/group_name"
            android:icon="@drawable/icon_group"
            android:theme="@style/AppThemeGroup"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:windowSoftInputMode="stateHidden"
            android:permission="com.abo.mokbel.test.MYPERMISSION"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
		<activity
            android:name=".ScreenActivity"
            android:label="@string/screen_name"
            android:icon="@drawable/icon_screen"
            android:theme="@style/AppThemeScreen"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:windowSoftInputMode="stateHidden"
            android:permission="com.abo.mokbel.test.MYPERMISSION"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".latex.activities.EditorActivity"
            android:icon="@drawable/icon_editor"
            android:theme="@style/AppThemeEditor"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:windowSoftInputMode="stateHidden"
            android:permission="com.abo.mokbel.test.MYPERMISSION"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name="com.mohamed.barki.tex.ManageSpaceActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true"
            tools:ignore="LockedOrientationActivity"/>
    </application>
</manifest>
