<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_background"
    android:id="@+id/layout_background_save"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
   <LinearLayout
        android:orientation="horizontal"
	    android:gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	   <Button
		   android:id="@+id/tvImageItem"
		   android:layout_width="50dp"
		   android:layout_height="50dp"
		   android:textColor="#FFFFFF"
		   android:textStyle="bold"
		   android:enabled="false"
		   android:background="@drawable/button_statu"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:gravity="top|left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNameItem"
                android:textColor="#ffffff"
                android:text="Title"
                android:textStyle="bold"
                android:gravity="top|left"
				android:background="@drawable/button_statu"/>
        </LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layout_formula_view"
		android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<com.mohamed.barki.latex.mathview.KatexView
			android:id="@+id/formula_view"
			android:layout_gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</com.mohamed.barki.latex.mathview.KatexView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layout_formula_view_mathjax"
		android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
		<com.mohamed.barki.latex.mathview.MathJaxView
			android:id="@+id/formula_view_mathjax"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</com.mohamed.barki.latex.mathview.MathJaxView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/layout_formula_view_tex"
		android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="0dp">
		<TextView
			android:id="@+id/formula_view_tex"
			android:textColor="#000000"
			android:textStyle="bold"
			android:typeface="monospace"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:padding="5.0dip"
        android:layout_below="@+id/dialog_profile">
        <ImageButton
            android:id="@+id/modif"
            android:background="@drawable/button_c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" 
            android:src="@drawable/ic_modif"/>
		<Button
            android:id="@+id/view_change"
            android:background="@drawable/button_g"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
            android:text="MathV1"
			android:textColor="#8A2BE2"
            android:layout_weight="1.0"/>
        <ImageButton
            android:id="@+id/copy"
            android:background="@drawable/button_f"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"  
            android:src="@drawable/ic_copy"/>

		<ImageButton
			android:id="@+id/imgRemove"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_weight="1.0"
			android:background="@drawable/button_i"
			android:src="@drawable/ic_close"
			tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>
</LinearLayout>
